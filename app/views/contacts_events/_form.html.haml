= form_for @contacts_event do |f|
  - if @contacts_event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contacts_event.errors.count, "error")} prohibited this contacts_event from being saved:"
      %ul
        - @contacts_event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :contact
    = f.collection_select :contact_id, Contact.all, :id, :first_name
  .field
    = f.label :event
    = f.collection_select :event_id, Event.all, :id, :name
  .actions
    = f.submit 'Save'
